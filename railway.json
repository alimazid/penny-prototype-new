{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "npm run railway:start"
  },
  "environments": {
    "development": {
      "variables": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "LOG_LEVEL": "info"
      }
    },
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "warn"
      }
    }
  }
}